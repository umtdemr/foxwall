root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = tab
tab_width = 8

[*.{html,js,css,py}]
trim_trailing_whitespace = true

[*.{html,js,css,md}]
tab_width = 4

[*.py]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
